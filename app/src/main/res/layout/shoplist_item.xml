<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">  <!-- padding from other cards -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/card_view"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">


        <RelativeLayout
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/shoppingitem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:textSize="20sp" />

            <!--
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@id/shoppingitem_editText">
            </com.google.android.material.textfield.TextInputLayout>
            -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shoppingitem_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:text="testo di prova"
                    android:textAppearance="@style/Widget.MaterialComponents.Tooltip"
                    android:textSize="20sp"
                    android:visibility="invisible" />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>